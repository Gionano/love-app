<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Our Love Story"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/pink_dark"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/daysCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white_translucent"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/daysTogetherText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We've been together for\n180 beautiful days! ðŸ’•"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/red_love"
                android:gravity="center"
                android:padding="24dp"
                android:lineSpacingExtra="4dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/messageCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white_translucent"
            app:layout_constraintTop_toBottomOf="@id/daysCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/loveMessageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every day with you feels like a beautiful dream come true. ðŸ’•"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:gravity="center"
                android:padding="24dp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="serif" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/generateMessageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Generate Love Message"
            android:textColor="@color/white"
            android:background="@drawable/button_love"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/messageCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
